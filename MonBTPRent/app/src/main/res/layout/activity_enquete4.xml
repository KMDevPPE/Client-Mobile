<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.marcd.MonBTPRent.Enquete4">

    <TextView
        android:id="@+id/idTxt"
        android:layout_width="321dp"
        android:layout_height="48dp"
        android:text="Enquete de satisfaction"
        android:textSize="26sp"
        android:textColor="@color/colorGreen"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textAlignment="center" />

    <LinearLayout
        android:id="@+id/lTech"
        android:layout_width="368dp"
        android:layout_height="113dp"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idTxt">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notez le technicien"
            android:textColor="@color/colorBlueSky"
            android:textSize="20sp" />

        <RatingBar
            android:id="@+id/idRbTech"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lIntervention"
        android:layout_width="368dp"
        android:layout_height="113dp"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lTech">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notez la vitesse d'installation"
            android:textColor="@color/colorBlueSky"
            android:textSize="20sp" />

        <RatingBar
            android:id="@+id/idRbIntervention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/idSuivant4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Suivant"
        android:backgroundTint="@color/colorGreen"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lIntervention" />

    <ImageView
        android:id="@+id/Titre"
        android:layout_width="294dp"
        android:layout_height="80dp"
        android:background="@drawable/btprentlogo"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/idSuivant2"
        />

</android.support.constraint.ConstraintLayout>
